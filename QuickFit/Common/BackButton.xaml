<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontIcon="clr-namespace:QuickFit.Helper"
             x:Class="QuickFit.Comman.BackButton">
    <VerticalStackLayout>
        <!--BackButoon for reused-->
       <ImageButton HorizontalOptions="Start"
                     Margin="30,15,0,0"
                     Aspect="AspectFit"
                     x:Name="Back_Button"
                     Clicked="Back_Button_Clicked"
                     BackgroundColor="Transparent">
            <ImageButton.Source>
                <FontImageSource FontFamily="Fontello"
                                 Glyph="{x:Static
                                 fontIcon:IconFont.Left }"
                                 Color="{AppThemeBinding
                                 Light={StaticResource TextLightColor},
                                 Dark={StaticResource TextDarkColor}}"
                                 Size="18"/>
            </ImageButton.Source>
        </ImageButton>
    </VerticalStackLayout>
</ContentView>

